<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h2 class="m-0">Get your free Car Insurance Quote from ACME Car Insurance!</h2>
            <h3 class="m-0">You too can get car insurance no matter your credit, accident history, or your driving record!</h3>
            <h4 class="m-0">Get your free quote today!</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("GetQuote", "Home", FormMethod.Post))
            {
                <div class="row no gutters">
                    <div class="form-group col-md-6">
                        <label class="text-center" name="FirstName">First Name:</label>
                        <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="LastName">Last Name:</label>
                        <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="EmailAddress">E-mail Address:</label>
                        <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="BirthDate">Date of Birth:</label>
                        <input name="BirthDate" type="date" class="form-control" placeholder="Birthdate: MM/DD/YYYY Ex: 01/01/1900" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="CarYear">Car Year:</label>
                        <input name="CarYear" type="number" class="form-control" placeholder="Car Year Ex: 2019" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="CarMake">Car Make:</label>
                        <input name="CarMake" type="text" class="form-control" placeholder="Car Make: " />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="CarModel">Car Model:</label>
                        <input name="CarModel" type="text" class="form-control" placeholder="Car Model: " />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="DUI">Do you have a DUI?</label>
                        <input name="DUI" type="text" class="form-control" placeholder="Please enter yes or no" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="SpeedingTickets">Do you have any speeding tickets?</label>
                        <input name="SpeedingTickets" type="number" class="form-control" placeholder="Please enter a whole number: " />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-center" name="InsurancePlan">Do you want full coverage or liability?</label>
                        <input name="InsurancePlan" type="text" class="form-control" placeholder="Please enter either full coverage or liability: " />
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">SUBMIT</button>
                </div>
            }
        </div>
    </div>
</div>